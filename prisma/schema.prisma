generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Modality {
 CR
  CT
  DX
  MG
  MR
  NM
  OT
  CP
  ES
  EEG
  BMD
  US
  XA
}

model Patient {
  id         String  @id @default(uuid())
  name       String
  document   String  @unique 
  birthDate  DateTime
  createdAt  DateTime @default(now())
  exams      Exam[]
}

model Exam {
  id             String   @id @default(uuid())
  patientId      String
  patient        Patient  @relation(fields: [patientId], references: [id])
  modality       Modality
  procedure      String
  performedAt    DateTime
  createdAt      DateTime @default(now())

  
  @@index([patientId])
}
